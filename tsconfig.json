{
  "compilerOptions": {
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true, 
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "@types/aws-lambda", "jest"]
  },
  "include": ["src/**/*"]
}
